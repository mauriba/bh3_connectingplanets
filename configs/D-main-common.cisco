! Enter configuration mode
enable
configure terminal

! General settings
banner motd #NO Unauthorized Access!!!#
no ip domain-lookup
line console 0
password bh3ab
login
exit
enable password bh3ab
service password-encryption

! Enable SSH for multilayer switches and routers
ip domain name spaceone-corp.com
username admin password bh3ab
crypto key zeroize rsa
yes
crypto key generate rsa
1024
line vty 0 15
login local
transport input ssh
exit
ip ssh version 2

! Every access switch underneath this distribution switch
! will be connected via trunk ports
interface range g1/0/3-24
  switchport mode trunk
  switchport trunk native vlan 90
  no shutdown
  exit

! Defining VLANs
vlan 2
  name wifi
vlan 3
  name research
vlan 4
  name residential
vlan 5
  name greenhouses
vlan 6
  name resources
  exit
vlan 7
  name server
  exit
vlan 90
  name native
  exit

! OSPF configuration for routing the subnets
router ospf 10
  network 10.1.2.0 0.0.0.255 area 0
  network 10.1.3.0 0.0.0.255 area 0
  network 10.1.4.0 0.0.0.255 area 0
  network 10.1.5.0 0.0.0.255 area 0
  network 10.1.6.0 0.0.0.255 area 0
  network 10.1.7.0 0.0.0.255 area 0

! Inter-VLAN routing
ip routing

interface vlan 2
  ip address 10.1.2.1 255.255.255.0
  ! Address of the DHCP server
  ip helper-address 10.1.7.4
  no shutdown
interface vlan 3
  ip address 10.1.3.1 255.255.255.0
  ! Address of the DHCP server
  ip helper-address 10.1.7.4
  no shutdown
interface vlan 4
  ip address 10.1.4.1 255.255.255.0
  ! Address of the DHCP server
  ip helper-address 10.1.7.4
  no shutdown
interface vlan 5
  ip address 10.1.5.1 255.255.255.0
  ! Address of the DHCP server
  ip helper-address 10.1.7.4
  no shutdown
interface vlan 6
  ip address 10.1.6.1 255.255.255.0
  ! Address of the DHCP server
  ip helper-address 10.1.7.4
  no shutdown
interface vlan 7
  ip address 10.1.7.1 255.255.255.0
  ! Servers use static IPs, no need for DHCP
  no shutdown
  exit
