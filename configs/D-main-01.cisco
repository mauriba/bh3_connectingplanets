enable
configure terminal

hostname "D-main-01"

! Set up routing interfaces connected to the Core Layer
interface g1/0/1
  no switchport
  ip address 10.1.0.5 255.255.255.252
  ip ospf 10 area 0
  no shutdown
  exit

interface g1/0/2
  no switchport
  ip address 10.1.0.9 255.255.255.252
  ip ospf 10 area 0
  no shutdown
  exit

! OSPF configuration for routing the subnets
ip routing
router ospf 10
  router-id 10.1.0.1

! Inter-VLAN routing with HSRP
interface vlan 2
  ip address 10.1.2.2 255.255.255.0
  ! Address of the DHCP server
  ip helper-address 10.1.7.4
  standby 2 ip 10.1.2.1
  standby 2 priority 105
  standby 2 preempt
  no shutdown

interface vlan 3
  ip address 10.1.3.2 255.255.255.0
  ! Address of the DHCP server
  ip helper-address 10.1.7.4
  standby 3 ip 10.1.3.1
  standby 3 priority 105
  standby 3 preempt
  standby 3 track g1/0/3
  no shutdown

interface vlan 4
  ip address 10.1.4.2 255.255.255.0
  ! Address of the DHCP server
  ip helper-address 10.1.7.4
  standby 4 ip 10.1.4.1
  standby 4 priority 105
  standby 4 preempt
  standby 4 track g1/0/4
  no shutdown

interface vlan 5
  ip address 10.1.5.2 255.255.255.0
  ! Address of the DHCP server
  ip helper-address 10.1.7.4
  standby 5 ip 10.1.5.1
  standby 5 track g1/0/5
  standby 5 preempt
  no shutdown

interface vlan 6
  ip address 10.1.6.2 255.255.255.0
  ! Address of the DHCP server
  ip helper-address 10.1.7.4
  standby 6 ip 10.1.6.1
  standby 6 track g1/0/6
  standby 6 preempt
  no shutdown

interface vlan 7
  ip address 10.1.7.2 255.255.255.0
  ! Servers use static IPs, no need for DHCP
  standby 7 ip 10.1.7.1
  standby 7 track g1/0/7
  standby 7 preempt
  no shutdown
